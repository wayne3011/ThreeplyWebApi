{
  "ThreeplyDatabase": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "ThreeplyDB"
  },
  "Groups": {
    "GroupsCollectionName": "Groups"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Information",
        "ThreeplyWebApi.Controllers.AuthenticationScheme": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "MongoDB",
        "Args": {
          "databaseUrl": "mongodb://localhost:27017/ThreeplyDB",
          "collectionName": "Log",
          "cappedMaxSizeMb": "1024",
          "cappedMaxDocuments": "50000"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
